YM_NO_INLINE std::string tostr_now(){
    struct tm newtime;
    time_t aclock;

    time(&aclock);
    localtime_s(&newtime, &aclock);

    char buffer[32];
    asctime_s(buffer, 32, &newtime);

    //  Stop at the first control character.
    upL_t c = 0;
    while (buffer[c] >= 32){
        c++;
    }
    buffer[c] = '\0';

    return buffer;
}
