void cpu_x86::cpuid(s32_t out[4], u32_t eax, u32_t ecx){
    __cpuid_count(eax, ecx, out[0], out[1], out[2], out[3]);
}
u64_t xgetbv(unsigned int index){
    u32_t eax, edx;
    __asm__ volatile ("xgetbv" : "=a"(eax), "=d"(edx) : "c"(index));
    return ((u64_t)edx << 32) | eax;
}
